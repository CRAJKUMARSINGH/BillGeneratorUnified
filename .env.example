# Environment variables for BillGenerator Unified
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=BillGenerator Unified
APP_VERSION=2.0.0
APP_MODE=Development

# Feature Toggles
FEATURE_EXCEL_UPLOAD=true
FEATURE_ONLINE_ENTRY=true
FEATURE_BATCH_PROCESSING=true
FEATURE_ADVANCED_PDF=true
FEATURE_ANALYTICS=false
FEATURE_CUSTOM_TEMPLATES=false
FEATURE_API_ACCESS=false

# UI Settings
UI_THEME=default
UI_SHOW_DEBUG=false
BRANDING_TITLE=BillGenerator Unified
BRANDING_ICON=ðŸ“„
BRANDING_COLOR=#00b894

# Processing Settings
PROCESSING_MAX_FILE_SIZE_MB=50
PROCESSING_ENABLE_CACHING=true
PROCESSING_PDF_ENGINE=reportlab
PROCESSING_AUTO_CLEAN_CACHE=false

# Future Database Settings (not currently used)
DATABASE_URL=sqlite:///billgenerator.db
MYSQL_PASSWORD=your_mysql_password_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# API Keys (if needed)
API_KEY=your_api_key_here

# Debug Settings
ENABLE_DEBUG=false